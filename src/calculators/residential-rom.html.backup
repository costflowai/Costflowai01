    <script>
        let lastCalculation = null;
        
        document.getElementById('residential-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get form values
            const sqft = parseFloat(document.getElementById('sqft').value);
            const quality = document.getElementById('quality').value;
            const stories = parseInt(document.getElementById('stories').value);
            const region = document.getElementById('region').value;
            const contingency = parseFloat(document.getElementById('contingency').value) / 100;
            
            // Input validation
            if (sqft < 500 || sqft > 50000) {
                alert('Square footage must be between 500 and 50,000');
                return;
            }
            
            // Use the centralized calculator
            const result = CostFlowCalculators.residential.calculate(sqft, quality, stories, region);
            
            // Add contingency
            const contingencyAmount = result.total * contingency;
            const totalWithContingency = result.total + contingencyAmount;
            
            // Display main result
            document.getElementById('result-value').textContent = CostFlowCalculators.utils.formatCurrency(totalWithContingency);
            document.getElementById('cost-per-sqft').textContent = CostFlowCalculators.utils.formatCurrency(totalWithContingency / sqft);
            
            // Show formula and factors used
            let formulaHTML = `
                <div style="background:#f0f7ff; padding:1rem; border-radius:8px; margin:1rem 0;">
                    <h4>üìä Calculation Formula</h4>
                    <p><strong>${sqft} sq ft</strong> √ó <strong>$${result.factors.baseCostPerSqft}/sq ft</strong> √ó <strong>${result.factors.storyMultiplier}</strong> (story factor) √ó <strong>${result.factors.regionalFactor}</strong> (regional factor)</p>
                    <p>Base Total: ${CostFlowCalculators.utils.formatCurrency(result.total)}</p>
                    <p>Contingency (${(contingency * 100).toFixed(0)}%): ${CostFlowCalculators.utils.formatCurrency(contingencyAmount)}</p>
                </div>
            `;
            
            // Create breakdown with contingency
            let breakdownHTML = formulaHTML + CostFlowCalculators.utils.generateBreakdownHTML({
                materials: result.breakdown.materials,
                labor: result.breakdown.labor, 
                overhead: result.breakdown.overhead,
                profit: result.breakdown.profit,
                contingency: contingencyAmount,
                total: totalWithContingency
            }, "Cost Breakdown");
            
            // Show assumptions
            breakdownHTML += `
                <div style="background:#f9fafb; padding:1rem; border-radius:8px; margin:1rem 0;">
                    <h4>üìã Assumptions</h4>
                    <ul style="margin:0.5rem 0; padding-left:1.5rem;">
                        ${result.assumptions.map(assumption => `<li>${assumption}</li>`).join('')}
                        <li>Contingency: ${(contingency * 100).toFixed(0)}% for unknowns and changes</li>
                    </ul>
                </div>
            `;
            
            // Add ROM disclaimer
            breakdownHTML += CostFlowCalculators.utils.addROMDisclaimer();
            
            document.getElementById('breakdown-details').innerHTML = breakdownHTML;
            document.getElementById('result').style.display = 'block';
            
            // Store for copy and export
            window.lastResult = {
                total: CostFlowCalculators.utils.formatCurrency(totalWithContingency),
                sqft: sqft,
                perSqft: CostFlowCalculators.utils.formatCurrency(totalWithContingency / sqft)
            };
            
            lastCalculation = {
                title: 'Residential ROM Estimate',
                projectInfo: {
                    projectName: 'Residential Project',
                    date: new Date().toLocaleDateString(),
                    squareFootage: sqft + ' sq ft',
                    qualityLevel: quality,
                    stories: stories,
                    region: region,
                    contingency: (contingency * 100).toFixed(0) + '%'
                },
                breakdown: [
                    { name: 'Materials', total: result.breakdown.materials },
                    { name: 'Labor', total: result.breakdown.labor },
                    { name: 'Overhead', total: result.breakdown.overhead },
                    { name: 'Profit', total: result.breakdown.profit },
                    { name: 'Contingency', total: contingencyAmount },
                    { name: 'Total Estimate', total: totalWithContingency }
                ].map(item => ({
                    name: item.name,
                    quantity: '',
                    unit: '',
                    unitCost: 0,
                    total: item.total
                })),
                summary: {
                    'Total Estimate': totalWithContingency,
                    'Cost per Sq Ft': totalWithContingency / sqft,
                    'Base Cost per Sq Ft': result.factors.baseCostPerSqft,
                    'Regional Factor': result.factors.regionalFactor,
                    'Story Factor': result.factors.storyMultiplier
                }
            };
        });
        
        function copyResult() {
            if (window.lastResult) {
                const text = `CostFlowAI Estimate: ${window.lastResult.total} (${window.lastResult.sqft} sqft @ ${window.lastResult.perSqft}/sqft)`;
                navigator.clipboard.writeText(text);
                document.getElementById('success-message').style.display = 'block';
                setTimeout(() => {
                    document.getElementById('success-message').style.display = 'none';
                }, 3000);
            }
        }
        
        function printResult() {
            window.print();
        }
        
        // Export functions
        function exportPDF() {
            if (lastCalculation) {
                window.exportUtils.exportToPDF(lastCalculation, 'residential-rom-estimate');
            }
        }
        
        function exportCSV() {
            if (lastCalculation) {
                window.exportUtils.exportToCSV(lastCalculation, 'residential-rom-estimate');
            }
        }
        
        function copyResults() {
            if (lastCalculation) {
                window.exportUtils.copyToClipboard(lastCalculation);
            }
        }
        
        function saveJSON() {
            if (lastCalculation) {
                window.exportUtils.saveAsJSON(lastCalculation, 'residential-rom-data');
            }
        }
    </script>
