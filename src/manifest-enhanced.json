  "categories": [
    "business",
    "productivity",
    "utilities",
    "finance"
  ],
  
  "shortcuts": [
    {
      "name": "Concrete Calculator",
      "short_name": "Concrete",
      "description": "Calculate concrete volume and costs",
      "url": "/calculators/concrete",
      "icons": [
        {
          "src": "/assets/images/shortcut-concrete.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Residential ROM",
      "short_name": "Residential",
      "description": "Rough order of magnitude for residential projects",
      "url": "/calculators/residential-rom-pro.html",
      "icons": [
        {
          "src": "/assets/images/shortcut-residential.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Commercial TI",
      "short_name": "Commercial",
      "description": "Commercial tenant improvement estimator",
      "url": "/calculators/commercial-ti-pro.html",
      "icons": [
        {
          "src": "/assets/images/shortcut-commercial.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "ROI Calculator",
      "short_name": "ROI",
      "description": "Return on investment calculator",
      "url": "/calculators/roi-maximizer.html",
      "icons": [
        {
          "src": "/assets/images/shortcut-roi.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://costflowai.com/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "capture_links": "existing-client-navigate",
  
  "file_handlers": [
    {
      "action": "/calculator/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+costflowai",
      "url": "/calculator?data=%s"
    }
  ],
  
  "share_target": {
    "action": "/calculator/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*", ".jpg", ".jpeg", ".png", ".webp"]
        },
        {
          "name": "documents",
          "accept": [".pdf", ".csv", ".json"]
        }
      ]
    }
  },
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "iarc_rating_id": "",
  
  "permissions": [
    "notifications",
    "background-sync"
  ],
  
  "features": [
    "offline-support",
    "push-notifications",
    "background-sync",
    "file-handling",
    "share-target",
    "window-controls-overlay"
  ]
}
