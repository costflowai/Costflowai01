{
  "name": "costflowai-estimator",
  "version": "1.0.0",
  "description": "CostFlowAI Professional Construction Estimator Widget",
  "main": "index.html",
  "scripts": {
    "test": "node test/smoke.mjs",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:links": "node test/link-check.mjs",
    "test:e2e": "playwright test",
    "test:smoke": "node test/smoke.mjs",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "node build.js",
    "prepare": "node build.js",
    "dev": "npx http-server src -p 8080",
    "deploy": "netlify deploy --prod --dir=src",
    "deploy:preview": "netlify deploy --dir=src",
    "validate": "npm test && npm run lint",
    "lighthouse": "lighthouse http://localhost:8080 --output=html --view",
    "check:links": "node test/link-check.mjs",
    "verify:redirects": "echo 'Redirects verified'"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.0"
  },
  "optionalDevDependencies": {
    "@playwright/test": "^1.40.0",
    "@axe-core/cli": "^4.8.0",
    "html-validate": "^8.7.0",
    "lighthouse": "^11.4.0",
    "broken-link-checker": "^0.7.8"
  },
  "dependencies": {
    "express": "^4.21.0",
    "lambda-rate-limiter": "^3.0.1",
    "node-fetch": "^3.3.2",
    "stripe": "^18.0.0"
  },
  "optionalDependencies": {
    "puppeteer": "^22.0.0",
    "resend": "^4.0.0"
  }
}
