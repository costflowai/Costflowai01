{
  "name": "costflowai-site",
  "version": "1.0.0",
  "description": "CostFlowAI enterprise calculator-first static site",
  "type": "module",
  "scripts": {
    "build:calculators": "node tools/build_calculators.mjs",
    "build:blog": "node tools/build_blog.mjs && node tools/build_search_index.mjs",
    "build:nonce": "node tools/inject_nonce.mjs",
    "build": "npm run build:calculators && npm run build:blog && npm run build:nonce",
    "test": "playwright test --config tests/playwright.config.ts",
    "lint": "node tools/lint.mjs",
    "lh": "lhci autorun"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1"
  }
}
